<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.PersonalFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/mau6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="308dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/notoseriftc_medium"
                android:paddingTop="5dp"
                android:layout_marginLeft="50dp"
                android:text="Thông tin cá nhân"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <ImageButton
                android:id="@+id/img_change_save"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#00FFFFFF"
                android:src="@drawable/ic_change_foreground"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/edNamePro"
                android:text="name"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="70dp"
                android:ems="10"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColor="@color/mau4"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edGenderPro"
                android:text="gender"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="60dp"
                android:ems="10"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColor="@color/mau4"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edNamePro" />

            <EditText
                android:id="@+id/edBirthPro"
                android:text="birthday"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="60dp"
                android:ems="10"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:textColor="@color/mau4"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edGenderPro" />

            <EditText
                android:id="@+id/edEmailPro"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="60dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                android:textColor="@color/mau4"
                android:textSize="16sp"
                android:text="email"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edBirthPro" />

            <EditText
                android:id="@+id/edPassPro"
                android:text="password"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="60dp"
                android:ems="10"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:textColor="@color/mau4"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edEmailPro" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="40dp"
                android:text="Họ và tên:"
                android:textColor="@color/mau1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="25dp"
                android:text="Giới tính: "
                android:textColor="@color/mau1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edNamePro" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="25dp"
                android:text="Ngày sinh:"
                android:textColor="@color/mau1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edGenderPro" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="25dp"
                android:text="Email:"
                android:textColor="@color/mau1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edBirthPro" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="25dp"
                android:text="Mật khẩu:"
                android:textColor="@color/mau1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edEmailPro" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</FrameLayout>