<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BinhLuanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnThoatBinhLuan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="thoát bình l"
            android:background="@android:color/transparent"
            android:src="@drawable/xmark_solid" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_marginRight="50dp"
            android:textAlignment="center"
            android:textSize="18dp"
            android:fontFamily="@font/notoseriftc_medium"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bình luận" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/rectangViewCmt"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_weight="1">

    </androidx.recyclerview.widget.RecyclerView>
    <EditText
        android:id="@+id/edBinhLuan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_input_trong"
        android:hint="Bình luận mới"
        android:paddingLeft="15dp"
        />

</LinearLayout>